<h2>Login to your account</h2>

<%= simple_form_for(resource, :as => resource_name, :url => admin_session_path) do |f| %>
  	<fieldset>
  	<div class="input-prepend" title="Username">
			<span class="add-on"><i class="icon-user"></i></span>
			<%= f.input_field :email, :required => false, :autofocus => true, :class => "input-large span10", :placeholder => "type username" %>
		</div>
		<div class="clearfix"></div>
		
		<div class="input-prepend" title="Password">
			<span class="add-on"><i class="icon-lock"></i></span>
			<%= f.password_field :password, :required => false, :class => "input-large span10", :placeholder => "type password" %>
		</div>
		<div class="clearfix"></div>
		
		<label class="remember" for="remember"><%= f.input_field :remember_me, :as => :boolean if devise_mapping.rememberable? %>Remember me</label>

		<div class="btn-group button-login">	
			<%= f.button :submit, "Login", :class => "btn btn-primary" %>
		</div>
		<div class="clearfix"></div>

  </fieldset>	
  
<% end %>

<hr>

<h3>Forgot Password?</h3>
<p>
	No problem, <a href="#">click here</a> to get a new password.
</p>
